<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--<item name="textColorPrimary">#ffffff</item>-->
        <item name="android:searchViewStyle" tools:targetApi="lollipop">@style/AppTheme.SearchView
        </item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.SearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:searchHintIcon" tools:targetApi="lollipop_mr1">
            @drawable/ic_search_white_36dp
        </item>
        <item name="android:queryBackground" tools:targetApi="lollipop">@color/write</item>

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="android:background">#FFFFFF</item>
    </style>
</resources>
